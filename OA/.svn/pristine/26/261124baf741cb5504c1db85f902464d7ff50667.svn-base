function closeimg(a) {
	$.ajax({// 获取用户相关所有信息包括是否登录判断
		type : "POST",
		url : '${pageContext.request.contextPath }/user_closeimg',
		data : "aid=" + a,
		success : function(msg) {
			var str = JSON.parse(msg);
			if (str.flag) {
				$('#center').html("");
				messgeindex();
			} else {
				messgeindex();
			}
		}
	});
}
